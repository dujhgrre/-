mode = "start"
if mode == "start":
    print("приветствую, это объяснялка непонятных слов, пример; ЛОЛ, КРИНЖ, РОФЛ, ЩИЩ, КРИПОВЫЙ, АГРИТЬСЯ.")
    meme_dict = {
                "КРИНЖ": "Что-то очень странное или стыдное",
                "ЛОЛ": "Что-то очень смешное",
                "РОФЛ": "шутка",
                "ЩИЩ":"одобрение или восторг",
                "КРИПОВЫЙ":"страшный, пугающий",
                "АГРИТЬСЯ":"злиться",
                }
    while True:
        word = input("Введите непонятное слово (большими буквами!): ")
        mode = "dd"
        if word in meme_dict.keys():
            print(meme_dict[word])
        else:
            print("слово не найдено")
            df = input("хотите добавить в программу?(1 если да, 2 если нет)")
            if df == "1":
                nam = input("название (большими буквами):")
                nak = input("значение:")
                meme_dict[nam] = nak
                word = input("Введите непонятное слово (большими буквами!): ")
            elif df == '2':
                word = input("Введите непонятное слово (большими буквами!): ")
    
